[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s

[user]
  name = Philip Blyth
  email = philip.blyth@gmail.com

[alias]
  aa = add --all
  ap = add --patch
  br = branch
  ca = commit --amend
  ci = commit
  civ = commit -v
  co = checkout
  df = diff
  st = status

  info = !git config --local -l
  rah = !git add --all && git reset --hard
  bg = "!sh -c \"git branch --list *$1*\" -"

  fs = !git flow feature start
  ff = !git flow feature finish
  fc = !git flow feature checkout

  stash-rename = "!_() { rev=$(git rev-parse $1) && git stash drop $1 || exit 1 ; git stash store -m \"$2\" $rev; }; _"

[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  autocrlf = input
	attributesfile = ~/.gitattributes
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[git-up "bundler"]
  check = true
[git-up "fetch"]
  prune = true

[difftool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
[difftool "meld"]
    path = /sw/bin/meld
[difftool "araxis"]
    path = /Applications/Araxis Merge.app/Contents/Utilities/compare
[difftool]
    trustExitCode = false
    prompt = false
[diff]
    renames = true
    tool = araxis

[mergetool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
[mergetool "meld"]
    path = /sw/bin/meld
[mergetool "araxis"]
    path = /Applications/Araxis Merge.app/Contents/Utilities/compare
    keepTemporaries = false
[mergetool]
    trustExitCode = false
    keepBackup = false
[merge]
    tool = araxis

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
