# One-Liners
alias blueprint='ruby ~/Library/Scripts/BlueprintCSS/v1.0/lib/compress.rb -f blueprint.yml -p default'
alias blueprint-tiny='ruby ~/Library/Scripts/BlueprintCSS/v1.0/lib/compress.rb -f blueprint.yml -p tiny'
alias rmdots="find . -type f ! -path '*.svn*' -prune \( -name '._*' -or -name '.DS_Store' -or -name 'Thumbs.db' \) -print0 | xargs -0 rm -v "
alias inputs='find -E . -type f -regex ".*\.(css|cfm|cfc|html|js|xml)$" ! -name "._*" ! -name ".svn" -prune -print0 > input'


# SVN
alias svn_revs="svn diff --depth empty ."
alias svn_inf="svn pg svn:mergeinfo . -R"
alias svn_x="svn pg svn:externals . -R"
alias svn_ign="svn pg svn:ignore ."
alias svn_ign_set="svn propset svn:ignore . --file 'ignore' -R"
alias svn_ls="svn ls \^/branches"
alias url="svn info 2>&1 | grep URL"

# - Scripts
alias cpg_br="cpg-s && cd .. && cpg_branches"
alias int_br="int-s && cd .. && cpg_branches web-intranet"
function fn_diff_c() { svn diff -x -w --no-diff-deleted $* | colordiff; }
alias diffc=fn_diff_c
function fn_diff_x() { svn diff -x -w --no-diff-deleted $* | subl; }
alias diffx=fn_diff_x
alias stx="svn status --ignore-externals | colorstatus"
alias stxx="svn status | colorstatus"
function fn_log() { svn log -l $1 | colorlog; }
alias log=fn_log
alias svx="svn pg svn:externals . -R | colorprops"
alias svi="svn pg svn:mergeinfo . -R | colorprops"
alias svr="svn diff --depth empty . | colorprops"
function fn_pe_x() { svn propedit svn:externals $*; }
alias pe_x=fn_pe_x
function fn_pe_i() { svn propedit svn:mergeinfo $*; }
alias pe_i=fn_pe_i


