# Self
alias aliases='subl -w ~/.aliases && source ~/.aliases'
alias profile='subl -w ~/.profile && source ~/.profile'


# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
# alias -g G='| grep'
